<script>
function validateForm() {
  var isValid = true;
  $(".form-control").each(function() {
    if ($(this).val() === "") {
      isValid = false;
    }
  });
  return isValid;
}

$("#answer").on("click", function(event){
  event.preventDefault();
  if(validateForm()){
    let userData = {
    name: $("#name").val(),
    photo: $("#photo").val(),
    scores: [
      $("#q1").val(),
      $("#q2").val(),
      $("#q3").val(),
      $("#q4").val(),
      $("#q5").val(),
      $("#q6").val(),
      $("#q7").val(),
      $("#q8").val(),
      $("#q9").val(),
      $("#q10").val()
    ]
  };
    console.log(userData);
    // AJAX post the data
    $.post("api/friends", userData), function(data){
      $("#match-name").text(data.name);
      $("#match-photo").attr("src", data.photo);
      // show the best match on modal
      $("#modalResult").modal("toggle");
    };
  } else {
    alert("Please fill out all fields before submitting!");
  }
  celar();

  function celar() {
    $("#name").val("");
    $("#photo").val("");
    $("#q1").val("Select an Option");
    $("#q2").val("Select an Option");
    $("#q3").val("Select an Option");
    $("#q4").val("Select an Option");
    $("#q5").val("Select an Option");
    $("#q6").val("Select an Option");
    $("#q7").val("Select an Option");
    $("#q8").val("Select an Option");
    $("#q9").val("Select an Option");
    $("#q10").val("Select an Option");  
  }
    
});
</script>
